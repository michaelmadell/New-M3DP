// This is your Prisma schema file
// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Admin users for managing the site
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("ADMIN")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Product categories
model Category {
  id          String    @id @default(cuid())
  name        String
  slug        String    @unique
  description String?
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

// Products for sale
model Product {
  id          String      @id @default(cuid())
  name        String
  slug        String      @unique
  description String?
  price       Float
  stock       Int         @default(0)
  images      String[]    // Array of image URLs
  category    Category    @relation(fields: [categoryId], references: [id])
  categoryId  String
  isActive    Boolean     @default(true)
  orderItems  OrderItem[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([categoryId])
  @@index([slug])
}

// Customer orders
model Order {
  id              String      @id @default(cuid())
  orderNumber     String      @unique
  customerEmail   String
  customerName    String
  customerPhone   String?
  shippingAddress Json? // Store address as JSON
  billingAddress  Json?
  items           OrderItem[]
  total           Float
  status          String      @default("pending") // pending, paid, processing, shipped, completed, cancelled
  stripePaymentId String?
  notes           String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  @@index([orderNumber])
  @@index([customerEmail])
}

// Order items (many-to-many between orders and products)
model OrderItem {
  id        String   @id @default(cuid())
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId   String
  product   Product  @relation(fields: [productId], references: [id])
  productId String
  quantity  Int
  price     Float // Store price at time of purchase
  createdAt DateTime @default(now())

  @@index([orderId])
  @@index([productId])
}

// Custom 3D print quotes
model Quote {
  id            String   @id @default(cuid())
  customerName  String
  customerEmail String
  customerPhone String?
  message       String?
  files         Json[] // Array of file information {name, url, size}
  status        String   @default("pending") // pending, reviewed, quoted, accepted, completed, declined
  quotedPrice   Float?
  notes         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([customerEmail])
  @@index([status])
}

// Blog posts / Reviews
model Post {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  content     String   // Markdown or HTML content
  excerpt     String?
  coverImage  String?
  category    String? // e.g., "review", "tutorial", "news"
  isPublished Boolean  @default(false)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([slug])
  @@index([isPublished])
}

// Photography gallery
model GalleryImage {
  id          String   @id @default(cuid())
  title       String?
  description String?
  imageUrl    String
  category    String // "digital" or "film"
  tags        String[] // Array of tags
  orderIndex  Int      @default(0) // For manual ordering
  isVisible   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
}
